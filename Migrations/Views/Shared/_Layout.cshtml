<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--<link rel="stylesheet" href="~/dashbord.styles.css" asp-append-version="true" />-->
    @*Icone*@
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" asp-append-version="true" />
    <!--  Font Awesome Solid + Brands -->
    <link href="~/lib/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link href="~/lib/fontawesome/css/brands.css" rel="stylesheet">
    <link href="~/lib/fontawesome/css/solid.css" rel="stylesheet">


    @*Datatable*@
    <!--<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" asp-append-version="true" />-->


</head>
<body id="body-pd">


    <header class="header" id="header">
        <div class="header_toggle">
            <i class='bx bx-menu' id="header-toggle"></i>
        </div>
        <div class="header_img">
            <img src="~/img/logo.png" alt="">
        </div>
    </header>

    <div class="l-navbar" id="nav-bar">
            <nav class="nav">

                <div>
                    <a asp-controller="Home" asp-action="Index" class="nav_logo">
                        <img class="nav_logo-icon" src="~/img/logo.png" alt="" style="width:25px; height:30px; ">
                        <span class="nav_logo-name">
                            Clinics Mangment
                        </span>
                    </a>

                    <div>
                        <a asp-controller="Home" asp-action="Index" class="nav_link active">
                            <i class='bx bx-grid-alt nav_icon'></i>
                            <span class="nav_name">Dashboard</span>

                        </a>


                        <a asp-controller="Clinics" asp-action="Index" class="nav_link">
                            <i class='bx bx-clinic nav_icon'></i> <span class="nav_name">Clinics</span>

                        </a>
                        <a asp-controller="Home" asp-action="Patients" class="nav_link">
                            <i class=' bx bx-hotel nav_icon'></i> <span class="nav_name">Patients</span>
                        </a>
                        <a asp-controller="Doctor" asp-action="Index" class="nav_link">
                            <i class='bx bx-group nav_icon'></i> <span class="nav_name">Doctors</span>
                        </a>
                        <a asp-controller="Home" asp-action="Medicines" class="nav_link">
                            <i class='bx bx-pencil'></i> <span class="nav_name">Medicines</span>
                        </a>
                        <a asp-controller="Home" asp-action="Settings" class="nav_link">
                            <i class='bx bx-cog nav_icon'></i> <span class="nav_name">Settings</span>
                        </a>



                    </div>


                </div>


                <a href="#" class="nav_link">
                    <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">SignOut</span>
                </a>
            </nav>
        </div>




    <div class="  container  height-100  cont1 " id="">

        @RenderBody()
    </div>














    <!--<script type='text/javascript' src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js'></script>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>-->
    @*<script src="/build/constrast-bootstrap-pro/js/cdb.js"></script>*@

    
    <script src="~/js/site.js"></script>

</body>
</html>

